{
  "$schema": "../FZPF_v0.1.schema.json",
  "policy": {
    "format": "fzpf",
    "schema_version": "0.1",
    "policy_id": "freshness-policy-example",
    "default_deny": true,
    "freshness_policy": "strict"
  },
  "defaults": {
    "freshness": {
      "revocation_max_age_secs": 300,
      "checkpoint_max_age_secs": 300
    }
  },
  "zones": [
    {
      "id": "z:critical",
      "name": "Critical Zone",
      "description": "High-security zone with strict freshness requirements",
      "integrity_level": 100,
      "confidentiality_level": 100,
      "freshness_policy": "strict",
      "rekey_policy": {
        "epoch_ratchet_enabled": true,
        "overlap_secs": 30,
        "retain_epochs": 2,
        "rewrap_on_membership_change": true,
        "rotate_object_id_key_on_membership_change": true
      }
    },
    {
      "id": "z:standard",
      "name": "Standard Zone",
      "description": "Standard zone with warn freshness policy",
      "integrity_level": 60,
      "confidentiality_level": 70,
      "freshness_policy": "warn",
      "rekey_policy": {
        "epoch_ratchet_enabled": false,
        "overlap_secs": 60,
        "retain_epochs": 5,
        "rewrap_on_membership_change": true,
        "rotate_object_id_key_on_membership_change": false
      }
    },
    {
      "id": "z:relaxed",
      "name": "Relaxed Zone",
      "description": "Low-security zone with best-effort freshness",
      "integrity_level": 20,
      "confidentiality_level": 10,
      "freshness_policy": "best_effort",
      "rekey_policy": {
        "epoch_ratchet_enabled": false,
        "overlap_secs": 120,
        "retain_epochs": 10,
        "rewrap_on_membership_change": false,
        "rotate_object_id_key_on_membership_change": false
      }
    }
  ]
}
